<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="wrap_content"
        android:layout_height="1500px"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="45px"
        android:layout_marginTop="40px"
        android:layout_marginEnd="45px"
        android:background="@drawable/test_image" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/image_view"
        android:layout_marginStart="580px"
        android:layout_marginTop="25px"
        android:background="@drawable/vaphlogo" />

    <ImageView
        android:layout_width="15px"
        android:layout_height="220dp"
        android:layout_alignBaseline="@id/image_view"
        android:layout_marginLeft="80px"
        android:layout_marginTop="1150px"
        android:background="@drawable/white_line"
        android:backgroundTint="@color/colorPrimaryDark"
        />

    <TextView
        android:id="@+id/product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/image_view"
        android:layout_marginLeft="110px"
        android:layout_marginTop="1200px"
        android:fontFamily="sans-serif"
        android:text="My jeans.."
        android:textColor="#FDFDF9"
        android:textSize="44dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/product_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_name"
        android:layout_alignBaseline="@+id/image_view"
        android:layout_marginLeft="110px"
        android:fontFamily="sans-serif"
        android:text="my swag."
        android:textColor="#000"
        android:textSize="40dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/anec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_view"
        android:background="@drawable/aneclogo"
        android:backgroundTint="@color/colorPrimaryDark"/>



</RelativeLayout>